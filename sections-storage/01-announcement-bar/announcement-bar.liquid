{% schema %}
{
  "name": "Announcement Bar",
  "tag": "section",
  "class": "announcement-bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show Announcement Bar",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_sticky",
      "label": "Sticky on Scroll",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Free shipping on all orders over $100"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "truck",
              "label": "Delivery"
            },
            {
              "value": "tag",
              "label": "Sale"
            },
            {
              "value": "gift",
              "label": "Gift"
            }
          ],
          "default": "truck"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}

{% if section.settings.show_announcement %}
  <div class="announcement-bar {% if section.settings.enable_sticky %}is-sticky{% endif %}"
       style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};"
       data-announcement-bar>
    <div class="container">
      <div class="announcement-bar__inner">
        <div class="swiper announcement-swiper" data-autoplay="true" data-loop="true" data-speed="3000">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% if block.type == 'announcement' %}
                <div class="swiper-slide" {{ block.shopify_attributes }}>
                  <div class="announcement-bar__content">
                    {% if block.settings.link %}
                      <a href="{{ block.settings.link }}" class="announcement-bar__link">
                    {% endif %}
                    
                    {% if block.settings.icon != 'none' %}
                      <span class="announcement-bar__icon">
                        {% case block.settings.icon %}
                          {% when 'truck' %}
                            <i class="icon icon-truck"></i>
                          {% when 'tag' %}
                            <i class="icon icon-tag"></i>
                          {% when 'gift' %}
                            <i class="icon icon-gift"></i>
                        {% endcase %}
                      </span>
                    {% endif %}
                    
                    <span class="announcement-bar__text">{{ block.settings.text }}</span>
                    
                    {% if block.settings.link %}
                      </a>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% style %}
.announcement-bar {
  width: 100%;
  text-align: center;
  padding: 10px 0;
  font-size: 14px;
  z-index: 100;
}

.announcement-bar.is-sticky {
  position: sticky;
  top: 0;
}

.announcement-bar__inner {
  position: relative;
}

.announcement-bar__content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.announcement-bar__link {
  color: inherit;
  text-decoration: none;
  display: flex;
  align-items: center;
  gap: 8px;
}

.announcement-bar__icon {
  display: flex;
  align-items: center;
}

.announcement-bar__text {
  margin: 0;
}

@media screen and (max-width: 767px) {
  .announcement-bar {
    font-size: 12px;
    padding: 8px 0;
  }
}
{% endstyle %} 