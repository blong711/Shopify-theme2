{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "tf-slideshow slider-fashion-1 slider-default",
  "settings": [
    {
      "type": "select",
      "id": "slider_effect",
      "label": "Slider Effect",
      "options": [
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide",
          "label": "Slide"
        }
      ],
      "default": "fade"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Autoplay Speed",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Style Redefined"
        },
        {
          "type": "textarea",
          "id": "subtext",
          "label": "Subtext",
          "default": "Discover the latest trends in fashion that speak your style."
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Collection"
        },
        {
          "type": "select",
          "id": "content_position",
          "label": "Content Position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="swiper tf-sw-slideshow slider-effect-{{ section.settings.slider_effect }}" 
  data-effect="{{ section.settings.slider_effect }}" 
  data-preview="1" 
  data-tablet="1"
  data-mobile="1" 
  data-centered="false" 
  data-space="0" 
  data-space-mb="0" 
  data-loop="true"
  data-auto-play="{{ section.settings.autoplay }}" 
  data-speed="{{ section.settings.autoplay_speed | times: 1000 }}">
  
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      {% if block.type == 'slide' %}
        <div class="swiper-slide" {{ block.shopify_attributes }}>
          <div class="slider-wrap bg-type-{{ forloop.index }}">
            <div class="image">
              {% if block.settings.image %}
                {{ block.settings.image | image_url: width: 1920 | image_tag: 
                  loading: 'lazy',
                  class: 'lazyload',
                  alt: block.settings.heading
                }}
              {% else %}
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="box-content">
              <div class="container">
                <div class="row">
                  <div class="{% if block.settings.content_position == 'right' %}col-lg-5 offset-lg-7 col-sm-6 offset-sm-6{% else %}col-lg-12 col-12 col-sm-6{% endif %}">
                    <div class="content-slider">
                      <div class="box-title-slider">
                        <h2 class="heading fw-medium fade-item fade-item-1 text-dark-5">
                          {{ block.settings.heading | newline_to_br }}
                        </h2>
                        <p class="sub text-md fade-item fade-item-2 text-dark-5">
                          {{ block.settings.subtext }}
                        </p>
                      </div>
                      {% if block.settings.button_link %}
                        <div class="box-btn-slider fade-item fade-item-3">
                          <a href="{{ block.settings.button_link }}" class="tf-btn btn-dark2 animate-btn">
                            {{ block.settings.button_text }}
                            <i class="icon icon-arr-right"></i>
                          </a>
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  
  <div class="wrap-pagination">
    <div class="container">
      <div class="sw-dots sw-pagination-slider justify-content-center"></div>
    </div>
  </div>
</div>

{% style %}
.slider-fashion-1 {
  position: relative;
  overflow: hidden;
}

.slider-fashion-1 .image img {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.slider-fashion-1 .box-content {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
}

.slider-fashion-1 .heading {
  font-size: 3.5rem;
  margin-bottom: 1rem;
}

.slider-fashion-1 .sub {
  font-size: 1.125rem;
  margin-bottom: 2rem;
}

@media (max-width: 768px) {
  .slider-fashion-1 .heading {
    font-size: 2.5rem;
  }
  
  .slider-fashion-1 .sub {
    font-size: 1rem;
  }
}
{% endstyle %} 